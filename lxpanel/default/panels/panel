        spacing=1
        GroupedTasks=0
    }
}

Plugin {
    type = tray
}

Plugin {
    type = batt
    Config {
        HideIfNoBattery=0
        AlarmCommand=xmessage Battery low
        AlarmTime=5
        BackgroundColor=black
        BorderWidth=1
        ChargingColor1=#28f200
        ChargingColor2=#22cc00
        DischargingColor1=#ffee00
        DischargingColor2=#d9ca00
        Size=8
    }
}

Plugin {
    type = netstatus
    Config {
        iface=eth0
        configtool=network-admin --configure %i
    }
}

Plugin {
    type = dclock
    Config {
        ClockFmt=%R
        TooltipFmt=%A %x
        BoldFont=0
        IconOnly=0
    }
}

Plugin {
